<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>signin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>joinus</servlet-name>
        <servlet-class>JoinUs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgot</servlet-name>
        <servlet-class>Forgot</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>friend</servlet-name>
        <servlet-class>Friend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addfriend</servlet-name>
        <servlet-class>AddFriend</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>addquotations</servlet-name>
        <servlet-class>AddQuotations</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>delfriend</servlet-name>
        <servlet-class>DelFriend</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>Profile</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>updprofile</servlet-name>
        <servlet-class>UpdateProfile</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>Home</servlet-class>
    </servlet>
        
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>joinus</servlet-name>
        <url-pattern>/joinus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forgot</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>friend</servlet-name>
        <url-pattern>/friend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addfriend</servlet-name>
        <url-pattern>/addfriend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addquotations</servlet-name>
        <url-pattern>/addquotations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delfriend</servlet-name>
        <url-pattern>/delfriend</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>updprofile</servlet-name>
        <url-pattern>/updprofile</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
	
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
	<filter-name>Set Character Encoding</filter-name>
	<filter-class>SetEncodingFilter</filter-class>
	<init-param>
	<param-name>encoding</param-name>
	<param-value>UTF-8</param-value>
	</init-param>
	</filter>
	<filter-mapping>
	<filter-name>Set Character Encoding</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
